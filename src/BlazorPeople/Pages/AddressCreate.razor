@page "/Address/create"
@using System.Net.Http
@using System.Net.Http.Json
@using System.Threading.Tasks
@inject HttpClient Http
@inject NavigationManager Navi
@using PeopleLib


<PageTitle>edit</PageTitle>





    <EditForm Model="@Address" OnValidSubmit = "@submit">
        <DataAnnotationsValidator /> 
        <ValidationSummary />
        <InputText @bind-Value="Address.StreetAddress"></InputText>
        <InputNumber @bind-Value="Address.PostalNumber"></InputNumber>
        <InputText @bind-Value="Address.PostalAddress"></InputText>
        <button type="submit">Add new</button>

    </EditForm>


@code {
    private Address Address=new();
    

    
    private async Task submit(){

        var result = await Http.PostAsJsonAsync($"/address",Address);
       
    }



}